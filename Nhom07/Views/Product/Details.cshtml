                                <span>@Html.DisplayFor(model=>model.MauSac)</span>
                                <h3>@Html.DisplayFor(model=>model.TenSP)</h3>
                                      <a href="#" class="heart-icon"><i class="icon_heart_alt"></i></a>
                                  </div>
                              
                                  <div class="pd-desc">
                                      <p>
                                       
                                      </p>
                                <h4 class="money">@Html.DisplayFor(model=>model.Gia) VNĐ</h4>
                                  </div>
                                  <div class="pd-color">
                                      <h6>WatchFace</h6>
                                      <div class="pd-size-choose">
                                        
