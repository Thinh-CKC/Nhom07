                                        <label for="sm-size">@Html.DisplayFor(model=>model.Size)</label>
                                      </div>
                                      
                                  </div>
                                  </div>
                                  <div class="pd-color" >  
                                      <h6> Strap</h6>
                                          <div class="pd-size-choose">
                                        
                                      <div class="sc-item">
  
                                          <input type="radio" id="sm-size">
                                        <label for="sm-size">@Html.DisplayFor(model=>model.LoaiDay)</label>
                                      </div>
                                    
                                  </div>
                              </div>
  
                           
                                  <div class="quantity">

                                <form asp-controller="Cart" asp-action="Add" asp-route-ProductId="@Model.ID">
                                    <div class="input-group quantity mr-2" >
                                        <label for="Quantity">Số lượng: </label>
                                        <input name="Quantity" id="Quantity" type="number" value="1" min="1" class="form-control" style="width: 50px;" />
                                    </div>
                                    <button class="btn btn-warning">
                                        Thêm vào giỏ hàng
                                    </button>
                                </form>
                                  </div>
                          
