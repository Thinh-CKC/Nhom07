                                                  <div class="p-price">
                                                    @Html.DisplayFor(model=>model.Gia) VNĐ
                                                 
                                                  </div>
                                              </td>
                                          </tr>
                                          <tr>
                                              <td class="p-catagory">Add To Cart</td>
                                              <td>
