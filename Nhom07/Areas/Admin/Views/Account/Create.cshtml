@model TaiKhoan
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="app-main__inner">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div>
                    <div class="text-uppercase font-bold">Tạo tài khoản</div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">
                <div class="card-body">
                    <form method="post" enctype="multipart/form-data">                        
                        <div class="position-relative row form-group">
                            <label asp-for="HoTen" class="col-md-3 text-md-right col-form-label"></label>
                            <div class="col-md-9 col-xl-8">
                                <input asp-for="HoTen" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="position-relative row form-group">
                            <label asp-for="Email" class="col-md-3 text-md-right col-form-label"></label>
                            <div class="col-md-9 col-xl-8">
                                <input asp-for="Email" type="email" class="form-control">
                            </div>
                        </div>
                        <div class="position-relative row form-group">
                            <label asp-for="SDT" class="col-md-3 text-md-right col-form-label"></label>
                            <div class="col-md-9 col-xl-8">
                                <input asp-for="SDT" type="tel" class="form-control">
                            </div>
                        </div>
                        <div class="position-relative row form-group">
                            <label asp-for="DiaChi" class="col-md-3 text-md-right col-form-label"></label>
                            <div class="col-md-9 col-xl-8">
                                <input asp-for="DiaChi" type="text" class="form-control">
                            </div>
                        </div>
                        <div class="position-relative row form-group">
                            <label asp-for="Password" class="col-md-3 text-md-right col-form-label"></label>
                            <div class="col-md-9 col-xl-8">
                                <input asp-for="Password" type="password" class="form-control">
                            </div>
                        </div>
                        <div class="position-relative row form-group">
                            <label asp-for="IsAdmin" class="col-md-3 text-md-right col-form-label"></label>
                            <div class="col-md-9 col-xl-8">
                                <div class="position-relative form-check pt-sm-2">
                                    <label asp-for="IsAdmin" class="form-check-label">
                                        <input asp-for="IsAdmin" type="checkbox" class="form-check-input">@Html.DisplayNameFor(model => model.IsAdmin)
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="position-relative row form-group mb-1">
                            <div class="col-md-9 col-xl-8 offset-md-2">
                                <button type="submit"
                                        class="btn-shadow btn-hover-shine btn btn-primary">
                                    <span class="btn-icon-wrapper pr-2 opacity-8">
                                        <i class="fa fa-download fa-w-20"></i>
                                    </span>
                                    <span>Lưu</span>
                                </button>
                                <a asp-area="Admin" asp-controller="Account" asp-action="Index" class="border-0 btn btn-outline-danger mr-1">
                                    <span class="btn-icon-wrapper pr-1 opacity-8">
                                        <i class="fa fa-times fa-w-20"></i>
                                    </span>
                                    <span>Hủy</span>
                                </a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

